{
	"manifest_version": 3,
	"name": "Karl Marks",
	"version": "0.0.4",
	"description": "A custom new-tab-page that respects your privacy with drag & drop bookmarks and dark/light mode support. Fast and open source.",
	"author": "Kolya",
	"chrome_url_overrides": {
		"newtab": "index.html"
	},

	"icons": {
		"16": "icons/16.png",
		"32": "icons/32.png",
		"48": "icons/48.png",
		"128": "icons/128.png",
		"512": "icons/512.png"
	},
	"action": {
		"title": "Open Karl Marks",
		"default_popup": "index.html#popup",
		"default_icon": {
			"16": "icons/16.png",
			"32": "icons/32.png",
			"48": "icons/48.png",
			"128": "icons/128.png",
			"512": "icons/512.png"
		}
	},
	"offline_enabled": true,
	"permissions": []
}